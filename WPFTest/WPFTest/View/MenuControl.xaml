<UserControl x:Class="WPFTest.View.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Menu FontSize="14">
            <MenuItem Header="Archivo" HorizontalAlignment="Left">
                <MenuItem Header="Salir" HorizontalAlignment="Left" Click="MenuSalir_Click"/>
            </MenuItem>
            <MenuItem Header="Administracion" HorizontalAlignment="Left">
                <MenuItem Header="Usuarios" HorizontalAlignment="Left" Click="MenuAdminUsuarios_Click"/>
            </MenuItem>
            <MenuItem Header="Reportes" HorizontalAlignment="Left">
                <MenuItem Header="Usuarios.Local" HorizontalAlignment="Left" Click="MenuReporteUsuarios_Click"/>
                <MenuItem Header="Usuarios.Server" HorizontalAlignment="Left" Click="MenuReporteUsuariosServer_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
