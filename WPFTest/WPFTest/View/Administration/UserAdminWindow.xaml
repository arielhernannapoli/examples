<Window x:Class="WPFTest.View.Administration.UserAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest.View.Administration"
        mc:Ignorable="d"
        Title="Administracion de Usuarios" 
        WindowStartupLocation="CenterScreen" FontSize="14"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <DataGrid ItemsSource="{Binding Usuarios}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Grid.Row="1" Width="150" Content="Agregar usuario" Command="{Binding AddUserCommand}" CommandParameter="{Binding Text, ElementName=nombre}" Focusable="False"/>
                <Button Grid.Row="1" Width="150" Content="Salir" Click="ButtonSalir_Click" />
            </StackPanel>
        </StackPanel>        
    </Grid>
</Window>
