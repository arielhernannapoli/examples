@model SAAPU.Web.Areas.Security.Models.UserViewModel
@{
    ViewData["Title"] = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New User</h2>

<hr />

@using (Html.BeginForm("AddUser", "User", FormMethod.Post))
{
    @Html.LabelFor(user => user.Name)
    @Html.TextBoxFor(user => user.Name)

    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user => user.Email)

    @Html.LabelFor(user => user.Roles)
    @Html.DropDownListFor(user => user.RoleId,
                         new SelectList(
                             Model.Roles, 
                             "Id", 
                             "Name"))

    <input type="submit" value="Save" />
}